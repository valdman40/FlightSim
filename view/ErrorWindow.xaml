<UserControl x:Class="FilghtSim.view.ErrorWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FilghtSim.view"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox>
        <Grid Background="LightPink" Height="400" Width="800">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>
            <TextBox VerticalAlignment="Center" HorizontalAlignment="left" Background="LightPink" Padding="2" Text="{Binding Path=_ErrorString, Mode=OneWay}" FontSize="50"/>
            <Button Grid.Row="1" FontSize="40" Padding="10" Click="Button_Click"> clear </Button>
        </Grid>
    </Viewbox>
</UserControl>
